<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:background="#979595"
        android:id="@+id/qr_title_rl"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:visibility="visible">

        <TextView
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="18sp"
            android:text="扫描二维码或条码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/qr_bottom_rl"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"></RelativeLayout>

    <RelativeLayout
        android:background="#4f000000"
        android:id="@+id/capture_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/qr_bottom_rl"
        android:layout_below="@+id/qr_title_rl">

        <FrameLayout
            android:id="@+id/capture_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_below="@+id/view1"
            android:id="@+id/capture_crop_view"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/qr_zbar_code_bg">

            <ImageView
                android:id="@+id/capture_scan_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/qr_zbar_scan_line" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/capture_crop_view"
            android:layout_alignTop="@+id/capture_crop_view"
            android:layout_toLeftOf="@+id/capture_crop_view"
            android:background="#4f000000" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/capture_crop_view"
            android:layout_alignTop="@+id/capture_crop_view"
            android:layout_toRightOf="@+id/capture_crop_view"
            android:background="#4f000000" />

        <View
            android:layout_alignParentTop="true"
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#4f000000" />

        <LinearLayout
            android:background="#4f000000"
            android:layout_below="@+id/capture_crop_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|center_horizontal"
            android:orientation="horizontal"
            android:paddingBottom="15dp"
            android:paddingRight="20dp"
            android:paddingTop="80dp"
        >

            <LinearLayout
                android:paddingLeft="10dp"
                android:id="@+id/linear1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
            >

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/light"
                />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="手电筒"
                    android:textColor="#ffffff"
                />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
            >

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/cancel"
                />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="取消"
                    android:textColor="#ffffff"
                />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>